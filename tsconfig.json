{
    "compilerOptions": {
      "target": "es5",                          
      "module": "commonjs",                    
      "lib": ["es6", "dom", "dom.iterable", "esnext"],                
      "allowJs": true,
      //"outDir": "build",                          
      //"rootDir": "src",
       "noImplicitAny": true,
      "esModuleInterop": true,
       "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
       "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "types": ["cypress", "node"],                        /* Specify type package names to be included without being referenced in a source file. */
    },
    "include": [
      "./src/**/*.tsx",
      "./src/**/*.ts",
      "cypress/component/app.cy.tsx",
      "**/*.ts"  
    ] 
  }